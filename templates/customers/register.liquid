{% layout 'infoTheme' %}
{% if customer %}
    <script type="text/javascript">
        window.location = "/account";
    </script>
{% endif %}

<div class="container">
    <div class="register">
        <div class="register__info">
            <h1 class="register__heading">Be a part of the Medico community</h1>
            <p class="register__body">
                Sign up to Medico to take advantage of all our offerings, see your purchases, and connect with others.
            </p>

            {% form 'create_customer' %}
                {{ form.errors | default_errors }}
                <input class="register__input" name="customer[first_name]" placeholder="First Name" required type="text"/>
                <input class="register__input" name="customer[last_name]" placeholder="Last Name" required type="text"/>
                <input class="register__input" name="customer[email]" placeholder="Email address" required type="email"/>
                <input class="register__input" name="customer[password]" placeholder="Password" required type="password"/>

                <button class="register__button" type="submit" value="Create">
                    Sign up
                </button>

            {% endform %}
            <p class="register__body register__body--signIn">
                Already have an account?
                <a class="register__link" href="/account/login">Sign in.</a>
            </p>
             <div class="register__line"></div>
             <p class="register__body register__body--signIn">Join hundreds of others and start selling your creations on Medico within minutes.</p>
            <a href="https://sell.medicolifestyle.com/join/5f56581aff583f0012fe2c1e/medico-marketplace" target="_blank">
                <button class="register__button">Seller Sign up</button>
            </a>
        </div>

        <div class="register__herosvg">{% include 'customersRegister' %}</div>
    </div>
</div>
